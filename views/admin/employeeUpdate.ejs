<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/css/admin.css">
    <title>&#127829; Deen Bakers</title>
</head>
<body>

    <!-- sidebar -->

    <section id="sidebar" class="hide">
        <a href="#" class="brand">
            <i class='bx bxs-cookie' style='color:#fdcb35'></i>
            <span class="text">Deen's</span>
        </a>

        <ul class="side-menu top">
            <li>
                <a href="/admin/dashboard">
                    <i class='bx bxs-tachometer'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>

            <li>
                <a href="/admin/orders">
                    <i class='bx bxs-cart' ></i>
                    <span class="text">Orders</span>
                </a>
            </li>

            <li>
                <a href="/admin/products">
                    <i class='bx bxs-package'></i>
                    <span class="text">Products</span>
                </a>
            </li>

            <li>
                <a href="#">
                    <i class='bx bxs-bar-chart-square'></i>
                    <span class="text">Analytics</span>
                </a>
            </li>

            <li>
                <a href="#">
                    <i class='bx bxs-store-alt'></i>
                    <span class="text">Inventory</span>
                </a>
            </li>

            <li class="active">
                <a href="/admin/employees">
                    <i class='bx bxs-group' ></i>
                    <span class="text">Employees</span>
                </a>
            </li>
        </ul>

        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Settings</span>
                </a>
            </li>

            <li>
                <form id="logout" action="/logout" method="POST">
                    <a href="#" class="logout" onclick="document.getElementById('logout').submit()">
                        <i class='bx bxs-log-out'></i>
                        <span class="text">Logout</span>
                    </a>
                </form>
            </li>
        </ul>
    </section>

    <!-- Content -->

    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>

            <a href="#" class="profile">
                <img src="" alt="">
            </a>
        </nav>

        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Employees</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Employees</a>
                        </li>

                        <li>
                            <i class='bx bx-chevron-right'></i>
                        </li>

                        <li>
                            <a href="#" class="active">Update</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="table-data">
                <div class="employeeUpdate_form">
                    <form action="/employeeUpdate/update/<%= emp._id %>" method="POST" enctype="multipart/form-data">
                        <h6><%= emp._id %></h6><br>
    
                        <span>First name</span><br>
                        <input type="text" name="fname" value="<%= emp.fname %>"><br>
                        <span>Last name</span><br>
                        <input type="text" name="lname" value="<%= emp.lname %>"><br>
                        <span>Gender</span><br>
                        <select name="gender">
                            <option value="">Select</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                        <span>Date of birth</span><br>
                        <input type="date" name="dob" value="<%= emp.dob %>">
                        <span>NIC</span><br>
                        <input type="text" name="nic" value="<%= emp.nic %>">
                        <span>Image</span><br>
                        <input type="file" name="image" id="image" ><br>
                        <span>Email</span><br>
                        <input type="email" name="email" value="<%= emp.email %>">
                        <span>Phone</span><br>
                        <input type="text" name="phone" value="<%= emp.phone %>">
                        <span>Address</span><br>
                        <input type="text" name="address" value="<%= emp.address %>"><br>
                        <span>Password</span><br>
                        <input type="password" name="password"><br>
                        <input type="submit" value="Update" class="updateProductBtn">
                    </form>
                </div>
            </div>
        </main>
    </section>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="/js/admin.js"></script>
    <script type="module" src="/js/addToOrders.js"></script>
    
</body>
</html>