<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/wwr4uyi0wthwtk6l1eph1ygbjoz32ajwgibfvw2yrta5k7hu/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <link rel="stylesheet" href="/css/admin.css">
    <title>&#127829; Deen Bakers</title>
</head>
<body>

    <!-- sidebar -->

    <section id="sidebar" class="hide">
        <a href="#" class="brand">
            <i class='bx bxs-cookie' style='color:#fdcb35'></i>
            <span class="text">Deen's</span>
        </a>

        <ul class="side-menu top">
            <li>
                <a href="/admin/dashboard">
                    <i class='bx bxs-tachometer'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>

            <li>
                <a href="/admin/orders">
                    <i class='bx bxs-cart' ></i>
                    <span class="text">Orders</span>
                </a>
            </li>

            <li>
                <a href="/admin/products">
                    <i class='bx bxs-package'></i>
                    <span class="text">Products</span>
                </a>
            </li>

            <li>
                <a href="/admin/analytics">
                    <i class='bx bxs-bar-chart-square'></i>
                    <span class="text">Analytics</span>
                </a>
            </li>

            <li class="active">
                <a href="/admin/promotions">
                    <i class='bx bxs-offer'></i>
                    <span class="text">Promotions</span>
                </a>
            </li>

            <li>
                <a href="/admin/employees">
                    <i class='bx bxs-group' ></i>
                    <span class="text">Employees</span>
                </a>
            </li>
        </ul>

        <ul class="side-menu">
            <li>
                <a href="/admin/settings">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Settings</span>
                </a>
            </li>

            <li>
                <form id="logout" action="/logout" method="POST">
                    <a href="#" class="logout" onclick="document.getElementById('logout').submit()">
                        <i class='bx bxs-log-out'></i>
                        <span class="text">Logout</span>
                    </a>
                </form>
            </li>
        </ul>
    </section>

    <!-- Content -->

    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>
        </nav>

        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Promotions</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Promotions</a>
                        </li>

                        <li>
                            <i class='bx bx-chevron-right'></i>
                        </li>

                        <li>
                            <a href="#" class="active">Offer</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="table-data">

                <div class="promo_form">

                    <form action="/promotions/send" method="post">

                        <textarea id="mytextarea" name="promoDetails">
                            Type here
                        </textarea>
    
                        <input type="submit" value="Send">
    
                    </form>

                </div>

            </div>
        </main>
    </section>

    <script>
        tinymce.init({
          selector: '#mytextarea',
          branding: false,
          height : 500,
          width : 1200,
          resize: false,
          statusbar: false
        });
      </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="/js/admin.js"></script>
    
</body>
</html>