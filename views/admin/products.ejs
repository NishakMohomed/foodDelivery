<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/css/admin.css">
    <title>&#127829; Deen Bakers</title>
</head>
<body>

    <!-- sidebar -->

    <section id="sidebar" class="hide">
        <a href="#" class="brand">
            <i class='bx bxs-cookie' style='color:#fdcb35'></i>
            <span class="text">Deen's</span>
        </a>

        <ul class="side-menu top">
            <li>
                <a href="/admin/dashboard">
                    <i class='bx bxs-tachometer'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>

            <li>
                <a href="/admin/orders">
                    <i class='bx bxs-cart' ></i>
                    <span class="text">Orders</span>
                </a>
            </li>

            <li class="active">
                <a href="/admin/products">
                    <i class='bx bxs-package'></i>
                    <span class="text">Products</span>
                </a>
            </li>

            <li>
                <a href="/admin/analytics">
                    <i class='bx bxs-bar-chart-square'></i>
                    <span class="text">Analytics</span>
                </a>
            </li>

            <li>
                <a href="#">
                    <i class='bx bxs-store-alt'></i>
                    <span class="text">Inventory</span>
                </a>
            </li>

            <li>
                <a href="/admin/employees">
                    <i class='bx bxs-group' ></i>
                    <span class="text">Employees</span>
                </a>
            </li>
        </ul>

        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Settings</span>
                </a>
            </li>

            <li>
                <form id="logout" action="/logout" method="POST">
                    <a href="#" class="logout" onclick="document.getElementById('logout').submit()">
                        <i class='bx bxs-log-out'></i>
                        <span class="text">Logout</span>
                    </a>
                </form>
            </li>
        </ul>
    </section>

    <!-- Content -->

    <section id="content">
        <nav>
            <i class='bx bx-menu'></i>

            <a href="#" class="profile">
                <img src="" alt="">
            </a>
        </nav>

        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Products</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Products</a>
                        </li>

                        <li>
                            <i class='bx bx-chevron-right'></i>
                        </li>

                        <li>
                            <a href="#" class="active">Home</a>
                        </li>
                    </ul>
                </div>

                <a href="/products/addProducts" class="btn-download">
                    <i class='bx bx-plus-medical'></i>
                    <apn class="text">New</apn>
                </a>
            </div>

            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Products</h3>
                    </div>

                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>Image</th>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% var num = 1 %>
                                <% menuItems.forEach(function(item) { %>
                                    <tr>
                                        <td><%= num %></td>
                                        <td><img src="/images/products/<%= item.image %>" class="menu_img"></td>
                                        <td><%= item.name %></td>
                                        <td>Rs. <%= item.price %></td>
                                        <td>
                                            <a href="/products/productUpdate/<%= item._id %>" class="editBtn" data-items="<%= JSON.stringify(item) %>">
                                                <i class='bx bxs-pencil'></i>
                                            </a> 
                                            <a href="/products/productDelete/<%= item._id %>" class="deleteBtn" data-items="<%= JSON.stringify(item) %>">
                                                <i class='bx bxs-trash-alt'></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% num++ %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </section>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="/js/admin.js"></script>
    <script type="module" src="/js/addToOrders.js"></script>
    
</body>
</html>